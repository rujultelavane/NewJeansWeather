<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/titleLayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/nwjnsbunny2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/weathertitle" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/nwjns_bunny" />
    </LinearLayout>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/textViewInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:fontFamily="@font/mobern_fashion_bold"
        android:textAlignment="center"
        android:text="enter ZIP code here:" />

    <EditText
        android:textColor="@color/black"
        android:id="@+id/editTextZipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:fontFamily="@font/mobern_fashion_bold"
        android:text="" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mobern_fashion_bold"
        android:textSize="20dp"
        android:backgroundTint="@color/button_blue"
        android:layout_marginTop="10dp"
        android:text="enter" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/button_blue"
        android:fontFamily="@font/mobern_fashion_bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:text="location" />

    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ot5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTemp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mobern_fashion_bold"
                android:text="temp: "
                android:textAlignment="center"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textViewDescription"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mobern_fashion_bold"
                android:text="weather: "
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mobern_fashion_bold"
                android:text="&quot;Ra-ta-ta-ta 울린 심장&quot;"
                android:textAlignment="center"
                android:textColor="@color/text_blue"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TableRow
